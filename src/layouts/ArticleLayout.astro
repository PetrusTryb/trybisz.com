---
const {projectData} = Astro.props;
export const prerender = false;

import {Image} from "astro:assets";
import PageLayout from "./PageLayout.astro";
import LocalizedDates from "../components/LocalizedDates.svelte";
import ProjectLinks from "../components/ProjectLinks.svelte";
import Tags from "../components/Tags.svelte";
---

<PageLayout title={projectData.title+" - Piotr Trybisz"} description={projectData.shortDescription}>
    {projectData.cover ?
            <Image src={projectData.cover} alt={projectData.shortDescription} id="cover" slot="header-before"/> : null}
    <Fragment slot="header">
        <Tags client:load tags={projectData.tags} projectId={projectData.id}/>
        <LocalizedDates client:only="svelte" publicationDate={projectData.publicationDate}/>
        <p hidden={projectData.published} style="font-size: small; color:yellow;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" style="width: 10px; height: 10px;">
  <path fill-rule="evenodd" d="M6.72 5.66l11.62 11.62A8.25 8.25 0 006.72 5.66zm10.56 12.68L5.66 6.72a8.25 8.25 0 0011.62 11.62zM5.105 5.106c3.807-3.808 9.98-3.808 13.788 0 3.808 3.807 3.808 9.98 0 13.788-3.807 3.808-9.98 3.808-13.788 0-3.808-3.807-3.808-9.98 0-13.788z" clip-rule="evenodd" />
</svg>&nbsp;Unlisted
        </p>
        <ProjectLinks projectData={projectData} client:only="svelte"/>
</Fragment>
<slot/>
</PageLayout>
<style>
    #cover {
        position: fixed;
        right: 0;
        top: 84px;
        width: 100%;
        height: 80vh;
        z-index: -1;
        opacity: 0.4;
    }
</style>


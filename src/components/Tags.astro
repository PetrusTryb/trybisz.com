---
const { tags } = Astro.props;
---
<div class="tags">
    {tags.map(tag => (
        <div>{tag}</div>
    ))}
</div>

<style>
    .tags {
        display: flex;
        flex-wrap: wrap;
        padding: 0;
        margin: 0;
    }

    .tags > div {
        width: fit-content;
        padding: 0 10px;
        margin-top: 2px;
        margin-right: 5px;
        border: 1px solid lightblue;
        border-radius: 5px;
        background-color: #2d2d2d55;
        font-size: smaller;
    }
</style>